<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/gradiant_color2"
    android:orientation="vertical">




    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiehome"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_speed="4.0"
        app:lottie_fileName="covid_protection.json"
        android:visibility="visible"/>

    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/MainACtivityofApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:backgroundTint="@color/navy_blue"
        android:text="Welcome!\nLet's start exploring..."
        android:visibility="gone" />






</LinearLayout>