<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".Homepage2">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/lineraLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
                <!-- First CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/divider2"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_user_profilepic" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Profile"
                                    android:gravity="center"
                                    android:background="@drawable/line_divider"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>



                </androidx.cardview.widget.CardView>
                <!-- Second CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="120dp"
                    android:layout_margin="5dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/divider2"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/cardView1"
                    app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_baseline_home_24" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Home"
                                    android:gravity="center"
                                    android:background="@drawable/line_divider"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Third CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_margin="5dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/divider2"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/cardView2"
                    app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:src="@drawable/ic_update" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Update Username"
                                    android:gravity="center"
                                    android:background="@drawable/line_divider"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>



        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lineraLayout1"
            android:layout_margin="10dp"
            android:background="@color/purple_300" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/divider1"
                    android:layout_margin="25dp"
                    />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:layout_below="@id/viewPager"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_300" />
                <LinearLayout
                    android:layout_below="@+id/divider2"

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/LinearL1"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/DetectDiseaseCovid"
                            android:layout_margin="15dp"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_covid_190" />
                        <TextView
                          android:id="@+id/DetectDiseaseCOVIDText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detect Disease"
                            />




                </LinearLayout>


                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/LinearL1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/purple_300" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/Lowerlinear"
            android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL1"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_timeline_1" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Timeline"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL2"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_pic_gallery" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Post"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL3"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_user_profilepic" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Profile"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL4"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_timeline_1" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="NewsFeed"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>



                </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Lowerlinear"
            android:id="@+id/Linear3"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">
                <!-- First CardView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL5"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_gmap" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Map"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL6"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_awareness_19" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Be Aware"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL7"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_detection1" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Dropdown"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewL8"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_review" /> <!-- Replace with your image resource -->

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Rateus"
                                    android:gravity="center"
                                    android:textColor="@android:color/black" />

                        </LinearLayout>



                </androidx.cardview.widget.CardView>




        </LinearLayout>
                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/Linear3"
                    android:layout_margin="10dp"
                    android:background="@color/purple_300" />



                <LinearLayout
                    android:id="@+id/lineraLayou4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/divider4"


                    >
                        <!-- First CardView -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView9"
                            android:layout_margin="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_below="@id/divider2"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="8dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_new_account" /> <!-- Replace with your image resource -->

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Create New"
                                            android:gravity="center"
                                            android:background="@drawable/line_divider"
                                            android:textColor="@android:color/black" />

                                </LinearLayout>



                        </androidx.cardview.widget.CardView>
                        <!-- Second CardView -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView10"
                            android:layout_width="120dp"
                            android:layout_margin="5dp"
                            android:layout_height="120dp"
                            android:layout_below="@id/divider2"
                            android:layout_marginTop="10dp"

                            app:cardCornerRadius="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                        <ImageView
                                            android:layout_marginTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="90dp"
                                            android:src="@drawable/ic__person_pin_24" /> <!-- Replace with your image resource -->

                                        <TextView
                                            android:layout_marginTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="About us"
                                            android:gravity="center"
                                            android:background="@drawable/line_divider"
                                            android:textColor="@android:color/black" />

                                </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Third CardView -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView11"
                            android:layout_margin="5dp"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_below="@id/divider2"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/cardView2"
                            app:cardCornerRadius="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:src="@drawable/ic_logout_24" /> <!-- Replace with your image resource -->

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Logout"
                                            android:gravity="center"
                                            android:background="@drawable/line_divider"
                                            android:textColor="@android:color/black" />

                                </LinearLayout>
                        </androidx.cardview.widget.CardView>



                </LinearLayout>
                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/lineraLayou4"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/purple_300" />




        </RelativeLayout>
</ScrollView>