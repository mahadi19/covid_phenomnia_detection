<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_light"
    tools:context=".ShowImageReview">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:background="@drawable/square_border"
            android:id="@+id/GO_to_homepage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home"
           android:layout_marginLeft="35dp"
            />

        <ImageView
            android:id="@+id/Post_to_timeline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_pic_gallery"
            android:background="@drawable/square_border"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/Visit_profile_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_profilepic"
            android:background="@drawable/square_border"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/Set_user_name_Photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_update"
            android:background="@drawable/square_border"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/Detect_disease"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_covid_190"
            android:background="@drawable/square_border"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/LogoutID"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logout_red"
            android:background="@drawable/square_border"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reView"
        android:layout_width="match_parent"
        android:layout_height="720dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
    <ProgressBar
        android:background="@drawable/gradiant_light"
        android:layout_gravity="center"
        android:id="@+id/recycleProgressId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ProgressBar>




</LinearLayout>