<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".ProfileUpdate">




    <LinearLayout

        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/cardview_border_pink"
        android:layout_height="match_parent">



        <ImageView
            android:src="@drawable/ic_baseline_photo_size_select_actual_24"
            android:id="@+id/userImage"
            android:layout_width="400dp"
            android:layout_height="400dp">
        </ImageView>



        <EditText
            android:id="@+id/userProfileName"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:hint="Update username"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/cardview_border_pink"
            android:layout_height="60dp">

        </EditText>

        <Button
            android:text="Update"
            android:id="@+id/userProfileUpdateBtn"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:backgroundTint="@color/yellow_orange"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>



</LinearLayout>